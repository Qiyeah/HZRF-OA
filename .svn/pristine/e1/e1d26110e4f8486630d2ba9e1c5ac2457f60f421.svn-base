ul {
	display: block;
	margin: 0;
	padding: 0;
	list-style: none;
}

li {
	display: block;
	margin: 0;
	padding: 0;
	list-style: none;
}

img {
	border: 0;
}

dl, dt, dd, span {
	margin: 0;
	padding: 0;
	display: block;
}

a, a:focus {
	text-decoration: none;
	color: #000;
	outline: none;
	blr: expression(this.onFocus = this.blur ());
}

a:link {
	color: #ffffff;
	text-decoration: none;
}

a:visited {
	color: #ffffff;
	text-decoration: none;
}

a:hover {
	color: #ffffff;
	font-weight: bolder;
	text-decoration: none;
}

a:active {
	color: #ffffff;
	text-decoration: none;
}

table {
	border-collapse: collapse;
	border-spacing: 0;
}

cite {
	font-style: normal;
}

h2 {
	font-weight: normal;
}

#mainBody {
	width: 100%;
	height: 100%;
	position: absolute;
	z-index: -1;
}

.loginbox ul {
	margin-left: 280px;
}

.loginbox ul li {
	margin-bottom: 15px;
}

.loginbox ul li label {
	color: #ffffff;
	padding-left: 25px;
}

.loginbox ul li label a {
	color: #ffffff;
}

.loginbox ul li label a:hover {
	color: #ffffff;
}

.loginbox ul li label input {
	margin-right: 5px;
}

.loginbox span {
	font-size: 12px;
	text-align: center;
	color: #ffffff;
}

.span1 {
	padding-top: 35px;
	font-size: 12px;
	text-align: center;
	color: #ffffff;
}
